#:kivy 2.0.0

<NodeWidget>:
     size: 50, 50
     canvas.after:
          Color:
               rgba: 0, 0, 0, 1
          Ellipse:
               size: 50, 50
               pos: self.pos

<MainViewWidget>:
     canvas.before:
          Color:
               rgba: 1, 1, 1, 1
          Rectangle:
          # self here refers to the widget i.e FloatLayout
               pos: self.pos[0], self.pos[1]
               size: self.size[0], self.size[1]

     GridLayout:
          size: root.width - 20, root.height - 20
          pos: 10, 10
          cols: 1
          rows: 1

          BoxLayout:
               orientation: 'vertical'

               # If you put something here it will appear above the slider

               BoxLayout:
                    Splitter:
                         sizable_from: 'right'
                         TextInput:
                              id: input_nodes
                              hint_text:'Enter text'
                              #pos_hint: {'center_x': 0.5, 'center_y': 0.705}
                              #size_hint: 0.95, 0.5
                              # on_text: app.process()

                    RelativeLayout:
                         id: graph_canvas
                         canvas.before:
                              Color:
                                   rgba: 0.8, 0.9, 0.9, 1
                              Rectangle:
                              # self here refers to the widget i.e FloatLayout
                                   pos: self.parent.pos[0] - 6, self.parent.pos[1] - 6
                                   size: self.size[0] - 6, self.size[1] - 6

                              Color:
                                   rgba: 0, 0, 0, 1
                              Line:
                                   width: 2
                                   rectangle: self.parent.pos[0] - 6, self.parent.pos[1] - 6, self.width - 6, self.height - 6
